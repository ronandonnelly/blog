<div class="space-y-4">
  <h1 class="text-2xl font-bold text-gray-800">Articles</h1>

  <p>Our blog has <%= Article.public_count %> articles and counting!</p>

  <ul class="list-disc space-y-2 pl-5">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <li>
          <%= link_to article.title, article, class: "text-blue-500 hover:text-blue-700" %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <%= link_to "New Article", new_article_path, class: "inline-block bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700" %>
</div>
