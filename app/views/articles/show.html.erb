<%= csrf_meta_tags %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @article.title %></h1>

  <p class="mb-4 text-gray-700"><%= @article.body %></p>

  <div class="flex flex-col md:flex-row justify-start items-start md:items-center space-y-2 md:space-y-0 md:space-x-4 mb-6">
    <%= link_to "Edit", edit_article_path(@article), class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Destroy', article_path(@article), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "inline-block bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <h2 class="text-2xl font-bold text-gray-900 mt-8 mb-4">Comments</h2>
  <%= render @article.comments %>
  <div class="mt-8">
    <h3 class="text-xl font-bold text-gray-900 mb-4">Add a comment:</h3>
    <%= render 'comments/form' %>
  </div>
</div>
